
@{
    ViewData["Title"] = "Index";
}
<div class="banner text-light">
    <div class="container">
        <div class="row">  
            <div class="col-sm-5">
                <h1 class="card-title display-4">SPA With master Details view</h1>
                <div>
                    <span style="font-size:20px; padding-top:10px;">Technologies</span>
                </div>
                <ul>
                        <li>ASP.NET Core 6.0</li>
                        <li>Vanila JavaScript</li>
                        <li>jQuery</li>
                        <li>Bootstrap 5.2.2</li>
                        <li>Bootstrap-icons 1.9.1</li>
                        <li>Bootstrap-datepicker</li>                 
                </ul>
                <a asp-action="Index" asp-controller="Main" class="btn btn-primary">Go to Single page Application </a>
            </div>
            <div class="col-sm-7">
                <img class="align-items-end" style="width:100%; hight:70%; border-radius:10px;" src="~/Pictures/pic.jpeg" />
            </div>
        </div>
    </div>
</div>
@section styles{
    <style>
        .banner {
            background-image: linear-gradient(to right, #076585 , #fff );
            width:100%;
            padding: 2em 0;
        }
        .row {
            align-items:center;
        }
        .btn{
            padding: 0.5em 1.5em;
            border-radius: 2em;
        }
    </style>
}

