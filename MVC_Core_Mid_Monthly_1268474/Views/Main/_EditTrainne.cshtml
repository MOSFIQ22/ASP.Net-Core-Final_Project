@model TrainneEditModel

<form id="f" name="f" data-db-type="trainne" data-db-action="edit" data-controller-action="EditTrainne">
    <input type="hidden" asp-for="TrainneID"/>
    <div class="form-group row mb-1">
        <label asp-for="CourseID" class="col-form-label col-2"></label>
        <div class="col-10">
            <select asp-for="CourseID" class="form-select form-select-sm" asp-items="@(new SelectList(ViewData["Courses"] as IEnumerable<Course>, "CourseID", "CourseName"))">
                <option value="" selected>Select One</option>
            </select>
            <span asp-validation-for="CourseID" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="TrainneName" class="col-form-label col-2"></label>
        <div class="col-10">
            <input asp-for="TrainneName" class="form-control" />
            <span asp-validation-for="TrainneName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="TraineeAddress" class="col-form-label col-2"></label>
        <div class="col-10">
            <input asp-for="TraineeAddress" class="form-control" />
            <span asp-validation-for="TraineeAddress" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="BirthDate" class="col-form-label col-2"></label>
        <div class="col-10">
            <input type="text" asp-for="BirthDate" class="form-control date">
            <span asp-validation-for="BirthDate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="Email" class="col-form-label col-2"></label>
        <div class="col-10">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="Picture" class="col-form-label col-2"></label>
        <div class="col-10">
            <input type="file" asp-for="Picture" class="form-control col-2" />
            <span asp-validation-for="Picture" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="IsRunning" class="col-form-label col-2"></label>
        <div class="col-10">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="IsRunning" checked>
            </div>
            <span asp-validation-for="IsRunning" class="text-danger"></span>
        </div>
    </div>
     <div class="col-3">
            <img src="/Pictures/@ViewData["CurrentPic"]" style="width:150px" class="img-thumbnail" />
     </div>
</form>